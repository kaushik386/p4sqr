<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/stextView"
        android:layout_width="147dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:text="Category:"
        android:textSize="18dp"
        android:gravity="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/venue_category"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/svenue_category"
        android:layout_width="201dp"
        android:layout_height="26dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Category Name"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/stextView2"
        android:layout_width="147dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="City:"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/stextView"
        app:layout_constraintStart_toStartOf="@+id/stextView"
        app:layout_constraintTop_toBottomOf="@+id/stextView" />

    <TextView
        android:id="@+id/scity"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="city name"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/svenue_category"
        app:layout_constraintStart_toStartOf="@+id/svenue_category"
        app:layout_constraintTop_toBottomOf="@+id/svenue_category" />

    <TextView
        android:id="@+id/stextView3"
        android:layout_width="147dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="State:"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/stextView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/stextView2"
        app:layout_constraintTop_toBottomOf="@+id/stextView2" />

    <TextView
        android:id="@+id/sstate"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="State Name"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/scity"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="@+id/scity"
        app:layout_constraintTop_toBottomOf="@+id/scity" />

    <TextView
        android:layout_width="147dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Country:"
        android:gravity="center"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/stextView3"
        app:layout_constraintStart_toStartOf="@+id/stextView3"
        app:layout_constraintTop_toBottomOf="@+id/stextView3" />

    <TextView
        android:id="@+id/scountry"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Country Name"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/sstate"
        app:layout_constraintStart_toStartOf="@+id/sstate"
        app:layout_constraintTop_toBottomOf="@+id/sstate" />

</android.support.constraint.ConstraintLayout>